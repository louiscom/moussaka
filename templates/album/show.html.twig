{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Songs</th>
                <td>{{ album.songs }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ album.artist }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_homepage') }}">Accueil</a><br/>

    <a href="{{ path('app_album_index') }}">back to list</a>

    {%if is_granted('ROLE_ARTIST') %}
        <a href="{{ path('app_album_edit', {'id': album.id}) }}">Edit</a>
    {%  endif %}

    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
