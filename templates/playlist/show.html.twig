{% extends 'base.html.twig' %}

{% block title %}Playlist{% endblock %}

{% block body %}
    <h1>Playlist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ playlist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ playlist.name }}</td>
            </tr>
            <tr>
                <th>Songs</th>
                <td>{{ playlist.songs ? playlist.songs|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ playlist.user }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_playlist_index') }}">back to list</a>

    <a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}">edit</a>

    {{ include('playlist/_delete_form.html.twig') }}
{% endblock %}
